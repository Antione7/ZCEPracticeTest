<!DOCTYPE html>
<html lang="{{ app.locale }}" ng-app="zcpe">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <title>{% block title %}ZCE Practice Test{% endblock %}</title>

        <head profile="http://www.w3.org/2005/10/profile">
        <link rel="shortcut icon" href="{{ app.request.basepath }}/favicon.ico" type="image/x-icon" />
        <link rel="icon" 
              type="image/x-icon"
              href="{{ app.request.basepath }}/favicon.ico" />

        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/flat-ui.min.css">
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/style.css">
        
        {% block stylesheets %}
        {% endblock %}
        
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {% block navbar %}
            {% include "@views/_navbar.html.twig" %}
        {% endblock %}

        <div class="container">
            {% block body %}
            {% endblock %}
        </div>
        
        <div id="js-vars"
            data-base-url="{{ app.request.baseUrl }}"
            data-basepath="{{ app.request.basepath }}"
        ></div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
        {% block javascripts %}
        {% endblock %}

    </body>
</html>

{% extends "@views/layout.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <h1>{{ 'my.sessions'|trans }}</h1>
        </div>
        <div class="col-xs-12">
            {#
                New session
            #}
            <button type="button" class="btn btn-default btn-tile" onclick="window.location.href='{{ path('session-new') }}'">
                <span class="fui-plus lead"></span>
                <br />
                <span class="success lead">{{ 'new.session'|trans }}</span>
            </button>
            
            {#
                Old sessions
            #}
            {% for session in sessions %}
                {% if session.success is not null %}
                    <button type="button" class="btn btn-{{ session.success ? 'success' : 'danger' }} btn-tile">
                        <span class="success lead">{{ session.success ? 'PASS' : 'FAIL' }}</span>
                        <br />
                        <span class="date">{{ 'on.%date%.at.%time%'|trans({
                            '%date%': session.dateFinished|date('d/m/Y'),
                            '%time%': session.dateFinished|date('G:i')}
                        ) }}</span>
                        <br />
                        <span class="topics">{{ 'topics.validated.%count%'|transchoice(session.nbTopicsValidated) }}</span>
                    </button>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
